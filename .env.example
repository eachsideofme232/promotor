# Promotor Environment Configuration

# Application
APP_NAME=Promotor
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# API
API_HOST=0.0.0.0
API_PORT=8000

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4o
MINI_MODEL=gpt-4o-mini

# Database (Supabase/PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/promotor
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Redis
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Vector Store (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=promotor-vectors

# Scraping Configuration
SCRAPING_PROXY_URL=
SCRAPING_BASE_DELAY=3.0
SCRAPING_MAX_REQUESTS_PER_HOUR=100

# Channel API Keys
COUPANG_ACCESS_KEY=your-coupang-access-key
COUPANG_SECRET_KEY=your-coupang-secret-key
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
KAKAO_ADMIN_KEY=your-kakao-admin-key

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Token Cost Optimization
ENABLE_CACHING=true
ENABLE_TIERED_MODELS=true
BACKGROUND_JOB_INTERVAL_HOURS=4
